environment  = "dev"
project_name = "my-lambda-project"  # Change this to your project name
aws_region   = "us-east-1"

lambda_layers = {
  common-libs = {
    description = "Common libraries layer for dev"
    compatible_runtimes = ["python3.9"]
  }
  # Add more layers as needed
  # data-processing = {
  #   description = "Data processing libraries for dev"
  #   compatible_runtimes = ["python3.9"]
  # }
}

lambda_functions = {
  # Example function configuration - replace with your actual functions
  function1 = {
    handler     = "lambda_function.lambda_handler"
    runtime     = "python3.9"
    timeout     = 30
    memory_size = 128
    layers      = ["common-libs"]
    environment_variables = {
      LOG_LEVEL = "DEBUG"
      ENV = "development"
    }
    api_gateway = {
      path   = "function1"
      method = "POST"
    }
  }
  
